<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LinguaVerse.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:LinguaVerse.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="LinguaVerse">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate views:DashboardPage}"
        Route="DashboardPage" />

    <ShellContent
        Title="Language Selection"
        ContentTemplate="{DataTemplate views:LanguageSelection}"
        Route="LanguageSelection" />

    <ShellContent
        Title="Quiz"
        ContentTemplate="{DataTemplate views:QuizPage}"
        Route="QuizPage" />
</Shell>
