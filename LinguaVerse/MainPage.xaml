<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LinguaVerse.Views.MainPage"
             BackgroundColor="Orange">
	<StackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20" Spacing="30">
		<Label Text="Matching Card: Check Your Knowledge"
               FontSize="32"
               HorizontalOptions="Center"
               TextColor="White"
               FontAttributes="Bold"/>
		<Grid x:Name="cardGrid"
              RowDefinitions="*,*,*"
              ColumnDefinitions="*,*"
              HorizontalOptions="Center"
              VerticalOptions="Center"
              Padding="20"
              RowSpacing="20"
              ColumnSpacing="20"/>
		<Button x:Name="closeButton"
                Text="Close"
                HorizontalOptions="Center"
                VerticalOptions="End"
                BackgroundColor="Red"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                Clicked="OnCloseButtonClicked"/>
	</StackLayout>
</ContentPage>
