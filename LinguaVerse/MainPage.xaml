<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LinguaVerse.Views.MainPage">
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20" Spacing="30">
        <Label Text="Matching Card: Check your knowledge"
               FontSize="32"
               HorizontalOptions="Center"
               TextColor="Black"
               FontAttributes="Bold"/>
        <Grid x:Name="cardGrid"
              RowDefinitions="*,*"
              ColumnDefinitions="*,*"
              HorizontalOptions="Center"
              VerticalOptions="Center"
              Padding="20"
              RowSpacing="20"
              ColumnSpacing="20"/>
    </StackLayout>
</ContentPage>
