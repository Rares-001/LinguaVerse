<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:LinguaVerse.ViewModel"
             x:Class="LinguaVerse.Views.QuizHistoryPage">

	<ContentPage.Content>
		<StackLayout Padding="10">
			<Label Text="Quiz History" FontSize="Large" HorizontalOptions="Center" />
			<CollectionView ItemsSource="{Binding QuizHistory}">
				<CollectionView.ItemTemplate>
					<DataTemplate>
						<StackLayout Padding="5">
							<Label Text="{Binding QuizID, StringFormat='Quiz ID: {0}'}" />
							<Label Text="{Binding Score, StringFormat='Score: {0}'}" />
							<Label Text="{Binding CompletionTime, StringFormat='Completion Time: {0} seconds'}" />
							<Label Text="{Binding AttemptDate, StringFormat='Attempt Date: {0:MM/dd/yyyy}'}" />
						</StackLayout>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
